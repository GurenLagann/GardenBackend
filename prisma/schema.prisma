generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  nome    String
  funcao  String
  status  String
  usuario String @unique
  senha   String
}

model Produto {
  id            String @id @default(uuid())
  nome          String
  quantidade    Int
  valor_unidade Int
  imagem        String
}

model Vendas {
  id          String   @id @default(uuid())
  data_venda  DateTime @default(now())
  quantidade  String
  valor_total Int
}
